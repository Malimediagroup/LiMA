    dojoConfig={
        baseUrl:"${ request.registry.settings['gen_static_location'] }",
        isDebug:true,
        async:  true,
        locale: "nl",
        packages: [
            { name: "dojo",     location: "libs/js/dojo/1.8.0/dojo" },
            { name: "dijit",    location: "libs/js/dojo/1.8.0/dijit" },
